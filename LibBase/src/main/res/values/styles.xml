<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="back_icon" format="reference" />
    <attr name="close_icon" format="reference" />
    <attr name="action_icon" format="reference" />
    <attr name="enable_under_divider" format="boolean" />
    <attr name="under_divider_color" format="color" />
    <attr name="under_divider_height" format="dimension" />
    <attr name="support_translucent_status_bar" format="boolean" />
    <attr name="menu_text_size" format="dimension" />
    <attr name="menu_text_color" format="color" />

    <style name="TweRootTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="TweToolbarBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="title_text_size">18dp</item>
        <item name="sub_title_text_size">13dp</item>
        <item name="menu_text_size">16sp</item>
        <item name="enable_under_divider">true</item>
        <item name="under_divider_color">#E0E0E0</item>
        <item name="under_divider_height">1px</item>
    </style>

    <style name="WhiteFontToolbar" parent="TweToolbarBase">
        <item name="title_text_color">#ffffff</item>
        <item name="android:background">#27A5F9</item>
        <item name="sub_title_text_color">#b2ffffff</item>
        <item name="menu_text_color">#ffffff</item>
        <item name="back_icon">@drawable/ic_back_white</item>
    </style>

    <declare-styleable name="TweToolbar">
        <attr name="title" format="string" />
        <attr name="sub_title" format="string" />
        <attr name="title_text_size" format="dimension" />
        <attr name="title_text_color" format="color" />
        <attr name="sub_title_text_size" format="dimension" />
        <attr name="sub_title_text_color" format="color" />
        <attr name="menu_text_size" />
        <attr name="menu_text_color" />
        <attr name="back_icon" />
        <attr name="close_icon" />
        <attr name="action_icon" />
        <attr name="action_text" format="string" />
        <attr name="enable_under_divider" />
        <attr name="under_divider_color" />
        <attr name="under_divider_height" />
        <attr name="support_translucent_status_bar" />
        <attr name="android:height" />
    </declare-styleable>

</resources>
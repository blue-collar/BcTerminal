<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/fujian_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="政策规范1"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fujian_updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-12-20 18:59:06"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/jindu"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/tishi_text"
            android:layout_toRightOf="@+id/fujian_updatetime"
            android:max="100"
            android:progress="0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/jindu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tishi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="点击下载"
            android:textColor="@color/black" />

    </RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.telewave.battlecommand.activity.NinePlaceDetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/top_bar">

        <include layout="@layout/page_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细信息"
            android:textColor="@color/white"
            android:textSize="18.0sp" />
    </RelativeLayout>


    <!--场所名称"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="场所名称" />

        <TextView
            android:id="@+id/nine_place_name"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>


    <!--场所地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="场所地址" />

        <TextView
            android:id="@+id/nine_place_address"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

    <!--单位类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="单位类型" />

        <TextView
            android:id="@+id/nine_place_unit_type"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

    <!--经度-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="经度" />

        <TextView
            android:id="@+id/nine_place_longitude"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

    <!--纬度-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="纬度" />

        <TextView
            android:id="@+id/nine_place_latitude"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

    <!--传真-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="传真" />

        <TextView
            android:id="@+id/nine_place_fax"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

    <!--应急服务内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="应急服务内容" />

        <TextView
            android:id="@+id/nine_place_service_scope"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

    <!--值班电话-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="值班电话" />

        <TextView
            android:id="@+id/nine_place_duty_phone"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

    <!--所属机构-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <TextView
            style="@style/Fire_Summary_Label"
            android:text="所属机构" />

        <TextView
            android:id="@+id/nine_place_organ"
            style="@style/Fire_Summary_Content" />
    </LinearLayout>

</LinearLayout>
                android:text="法人代表或主要负责人" />

            <TextView
                android:id="@+id/import_unit_frdb"
                style="@style/Fire_Summary_Content" />
        </LinearLayout>

        <!--法人电话-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:orientation="horizontal">

            <TextView
                style="@style/Fire_Summary_Label"
                android:text="法人电话" />

            <TextView
                android:id="@+id/import_unit_frdbdh"
                style="@style/Fire_Summary_Content" />
        </LinearLayout>

        <!--建筑面积-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:orientation="horizontal">

            <TextView
                style="@style/Fire_Summary_Label"
                android:text="建筑面积" />

            <TextView
                android:id="@+id/import_unit_jzmj"
                style="@style/Fire_Summary_Content" />
        </LinearLayout>

        <!--单位邮政编码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:orientation="horizontal">

            <TextView
                style="@style/Fire_Summary_Label"
                android:text="单位邮政编码" />

            <TextView
                android:id="@+id/import_unit_yzbm"
                style="@style/Fire_Summary_Content" />
        </LinearLayout>

        <!--专兼职消防管理人-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:orientation="horizontal">

            <TextView
                style="@style/Fire_Summary_Label"
                android:text="专兼职消防管理人" />

            <TextView
                android:id="@+id/import_unit_zjzxfglr"
                style="@style/Fire_Summary_Content" />
        </LinearLayout>

        <!--专兼职消防管理人电话-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:orientation="horizontal">

            <TextView
                style="@style/Fire_Summary_Label"
                android:text="专兼职消防管理人电话" />

            <TextView
                android:id="@+id/import_unit_zjzxfglrdh"
                style="@style/Fire_Summary_Content" />
        </LinearLayout>

        <!--专兼职消防管理人身份证-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"

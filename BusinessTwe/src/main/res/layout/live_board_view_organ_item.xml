<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <View
        android:id="@+id/v_userLine1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:scaleType="fitXY"
            android:src="@mipmap/im_ic_member" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginEnd="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="谭华君"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_onlineState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(在线)"
                    android:textColor="@color/color_55D03C"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_selectContactNext"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:scaleType="fitXY"
            android:src="@mipmap/m_icon_next" />
    </LinearLayout>

    <View
        android:id="@+id/v_userLine2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"
        android:visibility="visible" />

</LinearLayout>